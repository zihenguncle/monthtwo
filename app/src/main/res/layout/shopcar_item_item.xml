<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <CheckBox
        android:id="@+id/item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_simple"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/item_check"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:placeholderImage="@drawable/umeng_socialize_qq"
        />
    <TextView
        android:id="@+id/item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_simple"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:text="this is title"
        />
    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_simple"
        android:layout_alignBottom="@+id/item_simple"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#f00"
        android:text="this is price"
        />
    <com.example.month.one.custom.NumberCustom
        android:id="@+id/numberCustom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignBottom="@+id/item_simple"
        android:layout_marginBottom="10dp"
        ></com.example.month.one.custom.NumberCustom>
</RelativeLayout>
